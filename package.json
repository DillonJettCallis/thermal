{
  "name": "thermal",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "type": "module",
  "packageManager": "yarn@4.5.2",
  "dependencies": {
    "immutable": "4.3.7"
  },
  "devDependencies": {
    "@eslint/js": "9.15.0",
    "@stylistic/eslint-plugin": "2.11.0",
    "@types/node": "22.5.4",
    "esbuild": "0.23.1",
    "eslint": "9.15.0",
    "typescript": "5.7.2",
    "typescript-eslint": "8.15.0"
  },
  "scripts": {
    "build": "yarn run esbuild src/main.ts --platform=node --target=node20 --bundle --outfile=build/bundle/lib.js --minify",
    "test": "yarn node --test './src/test/*.test.ts'",
    "check": "yarn run tsc",
    "lint": "yarn run eslint --fix -c eslint.config.js src/**/*.ts",
    "sample": "yarn node src/main.ts && yarn run esbuild dist/simple.js --bundle --outfile=build/simple.js"
  }
}
